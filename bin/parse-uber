#!/bin/zsh -e
calc() python3 -c "from math import *; print($*);"
alias calc='noglob calc'
# fix this
(
for invoice in invoice-*; do pdftotext -layout $invoice - | grep 'Wartość PTU' | awk '{print $3}' | sed 's|,|.|g'; done | awk '{s+=$1}END{print s}'
for invoice in invoice-*; do pdftotext -layout $invoice - | grep Suma | awk '{print $2}' | sed 's|,|.|g'; done | awk '{s+=$1}END{print s}'
)
