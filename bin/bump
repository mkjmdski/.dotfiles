#!/bin/bash
if [ "$1" = "major" ]; then
    version="$(git describe --tags --abbrev=0 | awk -F. '{OFS="."; $1+=1; print $0}')"
elif [ "$1" = "minor" ]; then
    version="$(git describe --tags --abbrev=0 | awk -F. '{OFS="."; $2+=1; print $0}')"
elif [ "$1" = "patch" ]; then
    version="$(git describe --tags --abbrev=0 | awk -F. '{OFS="."; $3+=1; print $0}')"
fi
echo "$version"
git tag -a "$version" -m "$(git message)"
